<%- include('../includes/head.ejs') %>
</head>
  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>

      <div class="container" style="margin-top: 3rem;">

        <% if(tasks.length > 0) { %>

          <ul class="collection">

            <% for (let task of tasks) { %>
              <li class="collection-item">
                <div class="row">
                  <div class="col s10">
                    <%= task.description %>
                  </div>
                  <div class="col s1">
                    <a href="/todo/edit-task/<%= task.id %>?edit=true" class="waves-effect waves-light btn-small">Edit</a>
                  </div>
                  <div class="col s1">
                    <a class="waves-effect waves-light btn-small">Delete</a>
                  </div>
                </div>
              </li>  
            <% } %>
            
          </ul>  

        <% } else { %>

          <h1>No Tasks found!</h1>

        <% } %>  

      </div>

    </main>

<%- include('../includes/end.ejs') %>